#include <bits/stdc++.h>
using namespace std;

int main() {
  int n, d, total=0, ans=0;
  cin >> n >> d;
  vector<vector<int>> price(n, vector<int>(3, 0));
  for(int i=0; i<n; i++) {
    cin >> price[i][0] >> price[i][1] >> price[i][2]; //輸入近三天物品價格波動
    sort(price[i].begin(), price[i].end());
    if(abs(price[i][0]-price[i][2]) >= d) { total++; ans+=(price[i][0]+price[i][1]+price[i][2])/3; }
  }
  cout << total << " " << ans;
  return 0;
}
